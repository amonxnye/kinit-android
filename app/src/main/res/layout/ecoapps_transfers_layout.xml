<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="org.kinecosystem.kinit.viewmodel.spend.EcoAppsTransferViewModel" />
    </data>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="19dp"
                android:paddingTop="21dp"
                android:paddingRight="19dp"
                android:text="Introducing the Kin Ecosystem apps"
                android:textColor="#7884a5"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="19dp"
                android:paddingTop="8dp"
                android:paddingRight="19dp"
                android:paddingBottom="20dp"
                android:text="Discover all the exciting apps to earn and use Kin, and take it with you everywhere you want"
                android:textColor="#7884a5"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/categoriesContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/learn_more_card"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn more about Send Kin"
                    android:textColor="#7884a5"
                    android:textSize="16sp"
                    android:paddingTop="13dp"
                    android:paddingLeft="14dp"
                    />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/footer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="33dp"
                android:paddingRight="16dp"
                android:paddingBottom="33dp"
                android:text="More apps are coming soon"
                android:textColor="#d7dce9"
                android:textSize="16sp"

                />


        </LinearLayout>
    </ScrollView>


